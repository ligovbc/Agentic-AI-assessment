# Choose provider: "openai" or "azure"
OPENAI_PROVIDER=azure

# For regular OpenAI (if OPENAI_PROVIDER=openai)
OPENAI_API_KEY=your_api_key_here

# For Azure OpenAI (if OPENAI_PROVIDER=azure)
AZURE_OPENAI_API_KEY=your_azure_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Model deployment names (use your actual Azure deployment names)
# Common options: gpt-4o-mini, gpt-4o, gpt-4, gpt-35-turbo
FAST_MODEL=gpt-4o-mini
SLOW_MODEL=gpt-4

# Flask settings
FLASK_PORT=5000
FLASK_DEBUG=True
